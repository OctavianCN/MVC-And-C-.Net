@model T_ShirtStore.Models.Team

@{
    ViewBag.Title = "Update";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Team"))
{
   
    @Html.Label("TeamName", "Team Name:")
    <br />
    @Html.EditorFor(b => b.TeamName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(b => b.TeamName, "", new { @class = "text-danger" })
    <br />
    @Html.LabelFor(b => b.PlayersList, "Choose players:")
    <br />
    for (int i = 0; i < Model.PlayersList.Count(); i++)
    {
        @Html.HiddenFor(b => b.PlayersList[i].Id)
        @Html.HiddenFor(b => b.PlayersList[i].Name)
        @Html.CheckBoxFor(b => b.PlayersList[i].Checked)
        @Html.DisplayFor(b => b.PlayersList[i].Name)
        <br />
    }
    <br />
    <button class="btn btn-primary" type="submit">Update</button>
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>