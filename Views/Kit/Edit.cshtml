@model T_ShirtStore.Models.Kit

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kit</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.KitId)

        <div class="form-group">
            @Html.LabelFor(model => model.KitName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KitName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KitName, "", new { @class = "text-danger" })
            </div>
        </div>

             @Html.Label("Sale", "Sale:")
        <br />
            @Html.DropDownListFor(b => b.SaleId, new SelectList(Model.SaleList, "Value", "Text"), "Choose sale percent", new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.SaleId, "", new { @class = "text-danger" })
        <br />
        <br />
          @Html.Label("Season", "Season:")
        <br />
            @Html.DropDownListFor(b => b.SeasonId, new SelectList(Model.SeasonList, "Value", "Text"), "Choose season", new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.SeasonId, "", new { @class = "text-danger" })
        <br />
        <br />
          @Html.Label("Team", "Team:")
        <br />
            @Html.DropDownListFor(b => b.TeamId, new SelectList(Model.TeamList, "Value", "Text"), "Choose the team", new { @class = "form-control" })
            @Html.ValidationMessageFor(b => b.TeamId, "", new { @class = "text-danger" })
        <br />
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
